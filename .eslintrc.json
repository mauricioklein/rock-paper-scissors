{
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true,
        "jquery": true,
        "es6": true
    },
    "plugins": [
      "jasmine",
      "filenames"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": "off",
        "camelcase": [2, { "properties": "always" }],
        "filenames/match-regex": [2, "^[a-z_.]+$", true],
        "filenames/no-index": 2
    }
}
